{
    "satellite": {
        "name": "CubeSat-1U",
        "mission_id": "CS1-2025",
        "callsign": "CS1"
    },
    "camera": {
        "resolution": [
            3280,
            2464
        ],
        "capture_interval": 600,
        "compression_quality": 85,
        "svd_components": 50
